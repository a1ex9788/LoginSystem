@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@section Styles {
    <link href="@Url.Content("~/css/myStyles.css")" rel="stylesheet" type="text/css" />
}

<div class="groupForm">
    <h1 class="display-3">Login</h1>
    <form class="mt-4" method="post">
        <input class="form-control mt-4" placeholder="Username" value="@Model.Username">
        <input class="form-control mt-2 mb-1" placeholder="Password">
        <a asp-page="/Register">Not registered yet?</a><br>
        <input class="mt-4" type="submit" asp-page-handler="Login" value="Login">
    </form>
</div>